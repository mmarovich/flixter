<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

  <% @courses.each do |course| %>
    <div class="row">
      <div class="col-12">
        <h2 class="text-center">
          <%= link_to course.title, course_path(course) %>
        </h2>
      </div>
    </div>
    <div class="row"> 
      <div class="col-12 col-md-6">
        <% if course.image.present? %>
          <%= image_tag course.image, class: 'image' %>
        <% end %>
      </div>
      <div class="col-12 col-md-6">
        <div>
          <%= course.description %>
        </div>
        <div class="col-sm-4 col-12 text-center" style="float: right;">
          <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
        </div>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>